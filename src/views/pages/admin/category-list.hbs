    <div class="col-xl-5 col-12">
        <div class="card shadow-custom mb-4">
            <div class="card-body">
                <div class="card-title mb-3">
                    <h4>Create new category</h4>
                </div>
                <form action="/admin/categories/create" method="post">
                    <div class="form-outline mb-3">
                        <input
                            type="text"
                            class="form-control"
                            name="catName"
                            id="catName"
                            required
                        />
                        <label for="catName" class="form-label">
                            Category name
                            <span class="text-danger">*</span>
                        </label>
                    </div>

                    <div class="form-outline">
                        <input
                            type="text"
                            class="form-control"
                            name="superCat"
                            id="superCat"
                            list="superCatList"
                            required
                        />

                        {{! <datalist id="superCatList">
                            <option value="Boston">
                            <option value="Cambridge">
                        </datalist> }}

                        <label for="superCat" class="form-label">
                            Choose a super category
                            <span class="text-danger">*</span>
                        </label>
                    </div>
