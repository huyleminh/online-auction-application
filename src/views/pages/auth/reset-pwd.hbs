<body>
    <div class="containner containner-login h-100">
        <div class="row align-items-center justify-content-center h-100">
            <div class="col-xl-8 col-lg-8 col-md-8 justify-content-center row login-wrapper">
                <div class="col-xl-8 col-lg-10 col-md-10 ps-lg-5 pe-lg-5 login-form">
                    <h2 class="text-center mb-3">Create new password</h3>

                    <form action="/forget-pwd/reset-pwd" method="post" id="resetPwdForm">
                        <div class="form-outline">
                            <i class="fas fa-key trailing"></i>
                            <input
                                type="password"
                                id="password"
                                name="password"
                                class="form-control form-icon-trailing"
                                aria-describedby="passwordText"
                                autofocus
                                required
                            />
                            <label class="form-label" for="password">New password</label>
                        </div>
                        <div class="form-text mb-3" id="passwordText">Password must have at least 6 character</div>

                        <div class="form-outline">
                            <i class="fas fa-key trailing"></i>
                            <input
                                type="password"
                                id="confirmPassword"
                                class="form-control form-icon-trailing"
                                aria-describedby="confirmPasswordText"
                                required
                            />
                            <label class="form-label" for="confirmPassword">Confirm new password</label>
                        </div>
                        <div class="form-text mb-3" id="confirmPasswordText">Confirm password must match input password</div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-success" >
                                Create
                            </button>
                        </div>

                        <p class="mt-3 mb-3 text-center home-navigation">
                            <a href="/login" class="btn btn-outline-info">
                                <i class="fas fa-arrow-left me-1"></i>
                                Login
                            </a>
                            <a href="/" class="btn btn-info">
                                <i class="fas fa-home"></i>
                                Home
                            </a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>