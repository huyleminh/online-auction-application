                            </div>
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>

    {{! Top 5 products highest }}
    <div class="section container-fluid">
        <div class="container py-5" id="topHighest">
            <h2 class="mb-3 text-center">Most highest</h2>
            <p class="mb-4 text-center">Price is not a problem, try your luck once!</p>

            <div class="d-flex section-body containner h-auto">
                <div class="owl-carousel owl-theme" id="topHigh">
                    {{#each products.initArray}}
                        <div class="card product-card border">
                            <div class="p-3 skeleton" style="height: 200px;"></div>

                            <div class="card-body p-3 d-flex flex-column justify-content-between">
                                <div class="card-title skeleton" style="height: 45px;"></div>

                                <div class="card-info mb-2 d-flex align-items-center justify-content-between bid">
                                    <div class="skeleton" style="height: 35px; width: 125px"></div>
