                                <div class="card-info mb-2 d-flex align-items-center justify-content-between bid">
                                    <div class="skeleton" style="height: 35px; width: 150px"></div>
                                    <div class="skeleton" style="height: 35px; width: 80px"></div>
                                </div>

                                <div class="btn-block skeleton" style="height: 45px;"></div>
                            </div>

                            <div class="card-footer text-center px-3 py-2">
                                <p class="m-0 verical-align-middle skeleton" style="height: 30px;"></p>
                            </div>
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</section>

{{#section "js"}}
    <script src="owlcarousel/owl.carousel.min.js"></script>
    <script src="/js/home.js"></script>
{{/section}}