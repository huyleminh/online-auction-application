<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Online Auction</title>

        <link rel="icon" type="image/png" href="/images/auction.png" />
        <link rel="stylesheet" href="/css/styles.css" />
        <link rel="stylesheet" href="/css/profile.css" />
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
        />
        {{{_sections.css}}}

        <!-- Font Awesome -->
        <link
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css"
            rel="stylesheet"
        />
        <!-- Google Fonts -->
        <link
            href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
            rel="stylesheet"
        />
        <!-- MDB -->
        <link
            href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.10.1/mdb.min.css"
            rel="stylesheet"
        />

        <link rel="stylesheet" href="/md-datepicker/css/themes/light/deep-purple/mdDateTimePicker.min.css">

        <!-- MDB -->
        <script
            type="text/javascript"
            src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.10.1/mdb.min.js"
        ></script>
        <!-- Development version -->

        <script src="https://code.jquery.com/jquery-3.6.0.min.js" crossorigin="anonymous"></script>

        {{!-- Datepicker --}}
        <script src="/md-datepicker/js/moment.min.js"></script>
        <script src="/md-datepicker/js/mdDateTimePicker.js"></script>
        <script src="/md-datepicker/js/draggabilly.pkgd.min.js"></script>

        {{{_sections.preJs}}}
    </head>

    <body>
        {{> header}}

        <section class="container-fluid text-start top-menu-container">
            <div class="container py-4">
                {{{_sections.breadcrumb}}}
            </div>
        </section>

        <section class="container-fluid bg-light menu-container">
            <div class="container py-5">
                <div class="row">
                    <div class="col-xl-3 col-lg-4 d-lg-block profile-sidebar d-none">
                        {{> profilebar}}
                    </div>

                    {{! Profile section }}
                    <div class="col-xl-9 col-lg-8 col-12 profile-info">
                        <button
                            class="btn btn-light border shadow-0 mb-3 d-lg-none d-block p-3"
                            id="toggle-profile-btn"
                            title="Toggle profile sidebar"
                        >
                            <i class="fas fa-bars fs-6"></i>
                        </button>

                        {{{ body }}}
                    </div>
                    {{! Profile section - end }}
                </div>
            </div>
        </section>

        {{> footer}}

        <button class="back-to-top d-flex align-items-center justify-content-center">
            <i class="fas fa-chevron-up"></i>
        </button>

        {{! Profile modal }}
        <div
            class="profile-modal"
            id="profileModal"
        >
            <div class="m-0 animate__animated animate__slideInLeft" id="profileModalDialog">
                <div class="modal-content rounded-0" id="profileModalContent">
                    <div class="modal-header">
                        <h4 class="mb-0">Profile bar</h4>
                        <button
                            type="button"
                            class="btn-close"
                            id="btn-close-modal"
                        ></button>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-12 profile-sidebar">
                                {{> profilebar}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="custom-modal-backdrop"></div>
    </body>

    <script src="/js/index.js"></script>
    <script src="/js/header.js"></script>
    <script src="/js/profile.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    {{{_sections.js}}}
</html>