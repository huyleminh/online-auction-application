                </a>
            </li>

            <li class="list-group-item border-start-0 border-end-0 categories-item">
                <a href="#" style="height: 30px;">
                    <span class="skeleton" style="height: 30px; width: 100%"></span>
                </a>
            </li>
        </ul>
    </div>
</div>

<div class="card border shadow-0 mb-3">
    <form action="" method="get" id="filterProdForm">
        <input type="hidden" name="page" id="filterPage" value="{{page}}" />
        <div
            class="card-header border-0 d-flex justify-content-between"
            type="button"
            data-mdb-toggle="collapse"
            data-mdb-target="#collapseFilter"
            aria-expanded="true"
            aria-controls="collapseFilter"
        >
            <h6 class="m-0">Pick a filter</h6>
            <i class="fas fa-chevron-down ms-auto"></i>
        </div>

        <div class="card-body collapse show py-0" id="collapseFilter">
            <div class="py-3">
                <h6>Price</h6>
                <div class="form-check mb-3">
                    <input
                        class="form-check-input"
                        type="radio"
                        name="sort"
                        id="priceAsc"
                        value="price_asc"
                        {{#if (isEqual sort "price_asc")}}
                            checked
                        {{/if}}
                    />
                    <label class="form-check-label" for="priceAsc">Lowest first</label>
                </div>

                <div class="form-check mb-3">
                    <input
                        class="form-check-input"
                        type="radio"
                        name="sort"
                        id="priceDesc"
                        value="price_desc"
                        {{#if (isEqual sort "price_desc")}}
                            checked
                        {{/if}}
                    />
                    <label class="form-check-label" for="priceDesc">Highest first</label>
                </div>

                <div><hr class="dropdown-divider" /></div>

                <h6>Remaining time</h6>
                <div class="form-check mb-3">
                    <input
                        class="form-check-input"
                        type="radio"
                        name="sort"
                        id="remainLeast"
                        value="time_asc"
                        {{#if (isEqual sort "time_asc")}}
                            checked
                        {{/if}}
                    />
                    <label class="form-check-label" for="remainLeast">Shortest first</label>
                </div>

                <div class="form-check mb-3">
                    <input
                        class="form-check-input"
                        type="radio"
                        name="sort"
                        id="remainMost"
                        value="time_desc"
                        {{#if (isEqual sort "time_desc")}}
                            checked
                        {{/if}}
                    />
                    <label class="form-check-label" for="remainMost">Longest first</label>
                </div>
            </div>
        </div>

        {{! <div
            class="card-header border-0 border-bottom border-top d-flex justify-content-between"
            type="button"
            data-mdb-toggle="collapse"
            data-mdb-target="#collapsePrice"
            aria-expanded="true"
            aria-controls="collapsePrice"
        >
            <h6 class="m-0">Choose price range</h6>
            <i class="fas fa-chevron-down"></i>
        </div>

        <div class="card-body collapse show py-0" id="collapsePrice">
            <div class="py-3 row">
                <div class="col-6">
                    <div class="form-outline">
                        <input
                            type="number"
                            min="0"
                            id="min_price"
                            class="form-control"
                            placeholder="VND"
                            name="min_price"
                        />
                        <label class="form-label" for="min_price">Min price</label>
                    </div>
                </div>

                <div class="col-6">
                    <div class="form-outline">
                        <input
                            type="number"
                            min="0"
                            id="max_price"
                            class="form-control"
                            placeholder="VND"
                            name="max_price"
                        />
                        <label class="form-label" for="max_price">Max price</label>
                    </div>
                </div>
            </div>
        </div> }}

        <div class="card-footer">
            <button
                type="submit"
                class="btn btn-block btn-secondary shadow-0"
                style="font-size: 15px;"
                id="applyFilterBtn"
            >
                Apply filter
            </button>
        </div>
    </form>
</div>

